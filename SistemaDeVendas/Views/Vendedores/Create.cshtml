@model SistemaDeVendas.Models.Vendedor
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Vendedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                @*Esse taghelper(asp-for) é para definir o label que aparece na caixinha para digitar*@
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" required />
            </div>
            <div class="form-group">
                @*Esse taghelper(asp-for) é para definir o label que aparece na caixinha para digitar*@
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" required/>
            </div>
            <div class="form-group">
                @*Esse taghelper(asp-for) é para definir o label que aparece na caixinha para digitar*@
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" class="form-control" required />
            </div>
            <div class="form-group">
                @*Esse taghelper(asp-for) é para definir o label que aparece na caixinha para digitar*@
                <label asp-for="BaseSalarial" class="control-label"></label>
                <input asp-for="BaseSalarial" class="form-control" required />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-light" />

            </div>
        </form>
    </div>
</div>
