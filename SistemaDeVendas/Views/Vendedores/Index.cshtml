@model  IEnumerable<SistemaDeVendas.Models.Vendedor>

@{
    ViewData["Title"] = "Vendedores";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-light">Criar Novo</a>
</p>
<table class="table table-striped table-hover">
    @* Cabeçalho da tabela *@
    <thead>
        @* Definir a linha do cabeçalho da tabela *@
        <tr class="bg-success">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalarial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th></th>
        </tr>
    </thead>
    @* Corpo da tabela *@
    <tbody>
        @foreach (var item in Model)
        {
        @* Criar linha na tabela*@
        <tr>
            @*Criar colunas *@
            <td>
                @Html.DisplayFor(modelitem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.DataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.BaseSalarial)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.DepartamentoId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                <a asp-action="Detalhes" asp-route-id="@item.Id">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
        }
    </tbody>
</table>